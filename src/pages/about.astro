---
import Layout from "@layouts/Layout.astro";
import Nav from "@components/Nav.astro";
import Footer from "@components/Footer.astro";
import Newsletter from "@components/Newsletter.astro";
import CoreValues from "@components/CoreValues.astro";
import HeroBgWrapper from "@components/helpers/HeroBgWrapper.astro";
import Ideas from "@components/Ideas.astro";
import Stats from "@components/Stats.astro";
import OurTeamSmall from "@components/OurTeamSmall.astro";
import AccordionContainer from "@components/AccordionContainer.astro";
import faqData from "@data/faq.json";
// Prepare FAQ items for the accordion (AccordionItem will normalize paragraphs)
const items = faqData.faq.map((item, idx) => ({
  id: `faq-${idx + 1}`,
  question: item.question,
  answer: item.answer,
}));
---

<Layout title="About">
  <Nav />
  <HeroBgWrapper imagePath="Banner2.webp">
    <header>
      <div>
        <p>About</p>
        <h1>Creative Services For Boost <br /> Your Business Growth</h1>
      </div>
    </header>
  </HeroBgWrapper>
  <Ideas />
  <Stats />
  <CoreValues mode="light" />
  <OurTeamSmall />
  <AccordionContainer data={items} exclusive={true} />
  <Newsletter />
  <Footer />
</Layout>
