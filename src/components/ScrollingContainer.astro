---
import financialProjections from "@data/financialProjections.json";
import LeftArrow from "@icons/arrow-left.svg";
import RightArrow from "@icons/arrow--right.svg";
import DynamicIcon from "./helpers/DynamicIcon.astro";
---

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const list = document.querySelector(".full-width");
    const items = Array.from(list.children);
    let focusedIndex = 0;

    function updateFocus() {
      items.forEach((item, idx) => {
        item.classList.toggle("focused", idx === focusedIndex);
      });
    }

    document.querySelector(".arrows .left").parentElement.addEventListener("click", () => {
      focusedIndex = Math.max(0, focusedIndex - 1);
      items[focusedIndex].scrollIntoView({ behavior: "smooth", block: "nearest", inline: "center" });
      updateFocus();
    });

    document.querySelector(".arrows .right").parentElement.addEventListener("click", () => {
      focusedIndex = Math.min(items.length - 1, focusedIndex + 1);
      items[focusedIndex].scrollIntoView({ behavior: "smooth", block: "nearest", inline: "center" });
      updateFocus();
    });

    updateFocus();
  });
</script>

<section>
  <header>
    <div class="header-text">
      <h2>{financialProjections.title}</h2>
      <p>{financialProjections.subtitle}</p>
    </div>
    <div class="arrows">
      <button aria-label="Scroll left">
        <LeftArrow class="left" />
      </button>
      <button aria-label="Scroll right">
        <RightArrow class="right" />
      </button>
    </div>
  </header>
  <ul class="full-width">
    {
      financialProjections.values.map((card) => (
        <li>
          <DynamicIcon name={card.icon} class="card-icon" />
          <h3>{card.title}</h3>
          <p>{card.description}</p>
        </li>
      ))
    }
  </ul>
</section>
<style>
  @layer components {
    ul {
      list-style: none;
      display: flex;
      gap: 36px;
      overflow: hidden;
      width: 100%;
      height: 100%;
      margin: 0 auto;
      padding: 0 0 1rem 0;
      padding-inline: max(1rem, 50% - 1200px / 2);
    }

    li {
      background-color: var(--bg-medium-gray);
      color: var(--color-text-dark);
      padding: 44px 35px;
      border-radius: 20px;
      flex-basis: 30rem;
      flex-shrink: 0;
      transition: all 0.3s ease-in-out;

      h3 {
        font-size: var(--font-size-xl);
        font-weight: var(--font-weight-semibold);
        line-height: var(--line-height-tight);
        margin: 24px 0 10px 0;
      }

      p {
        color: var(--color-text-medium);
      }

      &.focused {
        background: var(--bg-dark);
        color: var(--color-white);

        p {
          color: var(--color-white);
        }

        svg {
          color: var(--bg-yellow-variant);
        }
      }
    }

    section {
      display: grid;
      grid-template-columns: 1fr minmax(0, 1200px) 1fr;
      gap: 2rem;
      background-color: var(--bg-light-gray);
      padding: 190px 0;
      margin-top: 140px;

      > * {
        grid-column: 2;
      }

      :last-child {
        grid-column: 1 / -1;
      }
    }

    header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 48px;

      .header-text {
        width: 645px;

        h2 {
          font-size: var(--font-size-6xl);
          font-weight: var(--font-weight-bold);
          line-height: var(--line-height-tight);
          margin-bottom: 13px;
          color: var(--color-text-dark);
        }
        p {
          color: var(--color-text-medium);
        }
      }

      .arrows {
        margin: 0;
        padding: 0;
        display: flex;
        gap: 26px;

        .left {
          background: var(--bg-dark);
          color: var(--color-white);
          width: 70px;
          height: 70px;
          padding: 18px;
          border-radius: 50%;
        }

        .right {
          background: var(--bg-yellow-variant);
          color: var(--color-text-dark);
          width: 70px;
          height: 70px;
          padding: 18px;
          border-radius: 50%;
        }

        > * {
          transition: all 0.3s ease-in-out;

          &:hover {
            translate: 0 -4px;
          }
        }
      }
    }
    /* Mobile layout */
    @media (max-width: 768px) {
      section {
        padding: 60px 0;
        margin-top: 40px;
        /* grid-template-columns: 1fr; */
      }
      header {
        flex-direction: column;
        align-items: flex-start;
        margin-bottom: 24px;
        .header-text {
          width: 100%;
          h2 {
            font-size: 28px;
          }
          p {
            font-size: 15px;
          }
        }
        .arrows {
          margin-top: 18px;
          gap: 16px;
          .left,
          .right {
            width: 48px;
            height: 48px;
            padding: 10px;
          }
        }
      }
      ul {
        gap: 16px;
        padding-inline: 1rem;
      }
      li {
        flex-basis: 80vw;
        padding: 24px 16px;
        h3 {
          font-size: 18px;
          margin: 16px 0 8px 0;
        }
        p {
          font-size: 14px;
        }
      }
    }
  }
</style>
