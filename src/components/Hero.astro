---
import Services from "./Services.astro";
---

<section class="hero">
  <div class="hero-grid">
    <div class="pattern"></div>
    <div class="hero-content">
      <h1>Empowering Your Business Growth</h1>
      <p>Discover tailored strategies and expert insights to take your business to the next level. Let us help you navigate challenges and achieve sustainable success.</p>
      <a href="#0">Book a Meeting</a>
    </div>
    <img src="/ceo.webp" alt="ceo" class="ceo-image" />
  </div>

  <Services />
</section>

<style>
  /* Styles her */
  @layer components {
    .hero {
      width: 100%;
      overflow: hidden;
    }

    .hero-grid {
      display: grid;
      height: 615px;
      grid-template-columns: 1fr clamp(300px, 50vw, 600px) clamp(300px, 50vw, 600px) 1fr;
      background-color: var(--bg-dark);
      align-items: center;
      margin-bottom: -150px;
      
      @media (max-width: 1270px) {
        padding-left: 38px;
      }

      @media (max-width: 768px) {
        display: flex;
        flex-direction: column;
        padding: 0;
        height: auto;
        margin-bottom: 38px;
      }
    }

    .hero-content {
      color: var(--color-white);
      display: flex;
      flex-direction: column;
      align-items: flex-start;
      padding-right: 95px;
      grid-column: 2 / 3;
      grid-row: 1;
      margin-bottom: 80px;
      text-wrap: pretty;

      h1 {
        margin-bottom: 20px;
      }

      p {
        margin-bottom: 29px;
      }

      a:hover{
        translate: 0 -3px;
      }
      @media (max-width: 768px) {
        padding: 38px;
        margin: 0;
      }
    }

    .ceo-image {
      grid-column: 3 / 5;
      grid-row: 1;
      width: 100%;
      height: 100%;
      object-fit: cover;
      object-position: center;

    }

    .pattern {
      background: url(/public/Pattern.svg);
      width: 260px;
      height: 260px;
      grid-column: 1 / 3;
      grid-row: 1;
      background-repeat: no-repeat;
      margin-left: -110px;

      @media (max-width: 1530px) {
        margin-left: -140px;
      }

      @media (max-width: 1460px) {
        margin-left: -170px;
      }

      @media (max-width: 1390px) {
        margin-left: -200px;
      }
      @media (max-width: 1340px) {
        display: none;
    }
  }
</style>
