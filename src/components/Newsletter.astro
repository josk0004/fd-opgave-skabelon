<section>
  <div class="newsletter-content">
    <img src="src/data/images/Pattern.svg" alt="" />
    <div class="green"></div>
    <div class="text-wrapper">
      <h2>Subscribe Our Newsletter</h2>
      <p>Build strong Customer Relations with <b>Consultalk</b></p>
    </div>
    <div class="form-wrapper">
      <input type="email" placeholder="your mail address" />
      <button type="submit">Subscribe</button>
    </div>
  </div>
</section>

<style>
  @layer components {
    section {
      margin-bottom: 133px;
      padding-inline: 38px;

      .newsletter-content {
        background-color: #181818;
        color: white;
        display: flex;
        justify-content: space-between;
        flex-wrap: wrap;
        gap: 20px;
        max-width: 1200px;
        margin: 0 auto;
        padding: 80px;
        border-radius: 24px;
        position: relative;
        overflow: hidden;

        @media (max-width: 768px) {
          padding: 60px 38px;
        }

        img {
          position: absolute;
          top: -70%;
          left: 88%;
          rotate: 45deg;
          z-index: 0;
        }

        .green {
          position: absolute;
          top: 65%;
          left: 90%;
          rotate: 45deg;
          width: 200px;
          height: 200px;
          background-color: #4eaf4e;
          border-radius: 24px;
        }

        .text-wrapper {
          z-index: 1;
          h2 {
            font-size: 35px;
            font-weight: 700;
            margin-bottom: 12px;
          }
        }

        .form-wrapper {
          display: flex;
          gap: 21px;
          z-index: 1;

          @media (max-width: 600px) {
            flex-direction: column;
          }

          input {
            padding: 15px 20px;
            border: none;
            border-radius: 4px;
            font-size: 16px;
            width: 300px;
            background-color: #ffffff;
            color: #181818;

            @media (max-width: 600px) {
              width: 100%;
            }
          }

          button {
            background-color: #ffcc4a;
            color: #181818;
            border: none;
            border-radius: 50px;
            padding: 15px 45px;
            font-size: 18px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease-in-out;
            width: fit-content;

            &:hover {
              translate: 0 -3px;
            }
          }
        }
      }
    }
  }
</style>
